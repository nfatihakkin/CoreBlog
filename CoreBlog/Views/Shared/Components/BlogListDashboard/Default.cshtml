@using EntityLayer.Concrete
@model List<Blog>



<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Yazılarım</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Yazar </th>
                                <th> Konu </th>
                                <th> Durum </th>
                                <th> Oluşturma Zamanı </th>
                                <th> Kategori </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <img src="@item.BlogImage" class="mr-2" alt="image"> @item.WriterID
                                </td>
                                <td><a href="/Blog/BlogReadAll/@item.BlogID">@item.BlogTitle</a></td>
                                <td>
                                    <label class="badge badge-gradient-success">@item.BlogStatus</label>
                                </td>
                                <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy")) </td>
                                <td> @item.CategoryID </td>
                            </tr>
                            }
                            
                            
                            
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>