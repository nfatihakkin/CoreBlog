@model IEnumerable<EntityLayer.Concrete.Comment>

<h1>Comments Area</h1>
<br />
<div class="comment-top">
    <h4>Yorumlar</h4>
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/TemaCoreBlog/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName </h5>
                <p>
                    @item.CommentContent
                </p>
            </div>
        </div>
    }
</div>
<br />