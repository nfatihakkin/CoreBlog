
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/adminLayout.cshtml";
}

<h1>Yazar Ajax İşlemleri</h1>
<br />
<button type="button" id="btngetlist" class="btn btn-outline-primary">Yazar Listesi</button>
<button type="button" id="btngetbyid" class="btn btn-outline-success">Yazar Getir</button>
<button type="button" id="btnaddwriter" class="btn btn-outline-warning">Yazar Ekle</button>
<button type="button" id="btndeletewriter" class="btn btn-outline-danger">Yazar Sil</button>
<button type="button" id="btnupdatewriter" class="btn btn-outline-secondary">Yazar Güncelle</button>
<br />
<br />
<div id="writerlist">
    Buraya yazarlar gelecek
</div>
<br />
<div id="writerget">
    Buraya filtreli yazar gelecek
</div> 
<br />
<div>
    <input type="text" id="wid" placeholder="Yazar ID değeri " class="form-control"/><br />
</div>
<div>
    <br />
    <label>Yazar Ekleme Alanı</label>
    <input  type="text" class="form-control" id="txtwriterid" placeholder="Yazar ID giriniz"/>
    <br />
    <input  type="text" class="form-control" id="txtwritername" placeholder="Yazar Adı giriniz"/>
        
</div>
<div>
    <br /><br />
    <label>Yazar Silme Alanı</label>
    <input type="text" class="form-control" id="txtdeletewriterid" placeholder="Silinecek Yazar ID giriniz" />
    <br />

</div>

<div>
    <br /><br />
    <label>Yazar Güncelleme Alanı</label>
    <input type="text" class="form-control" id="txtupdatewriterid" placeholder="Güncellenecek Yazar ID giriniz" /><br />
    <input type="text" class="form-control" id="txtupdatewritername" placeholder="Güncellenecek Yazar Adı giriniz" />
    
    <br />

</div>



@section scripts{
    <script>

        $('#btngetlist').click(function () {
            $.ajax({
                contentType: "application/json",
                dataType: "json",
                type: "Get",
                url: "/Admin/Writer/WriterList/",
                success: function (func) {
                    let w = jQuery.parseJSON(func);
                    console.log(w);
                    let tablehtml = "<table class=table table-bordered><tr><th>Yazar ID </th><th>Yazar Adı</th></tr>";
                    $.each(w, (index, value) => {
                        tablehtml += `<tr><td>${value.Id}</td> <td>${value.Name}</td></tr>`
                    });
                    tablehtml += "</table>";
                    $('#writerlist').html(tablehtml);
                }
            });
        });

        $('#btngetbyid').click(x => {
            let id = $("#wid").val();
            $.ajax({
                contentType: "application/json",
                dataType: "json",
                type: "get",
                url: "/Admin/Writer/GetWriterByID/",
                data: { wid: id },
                success: function (func) {
                    let w = jQuery.parseJSON(func);
                    console.log(w);

                    let tablehtml = "<table class=table table-bordered><tr><th>Yazar ID</th><th>Yazar Adı</th></tr>";
                    tablehtml += `<tr><td>${w.Id}</td><td>${w.Name}</td></tr>`;
                    tablehtml += "</table>";
                    $('#writerget').html(tablehtml);
                }
            });
          
        });

        $('#btnaddwriter').click(function () {
            let w = {
                Id: $('#txtwriterid').val(),
                Name: $('#txtwritername').val()
            };
            $.ajax({
                type: "Post",
                url: "/Admin/Writer/AddWriter/",
                data: w,
                success: function (func) {
                    let result = jQuery.parseJSON(func);
                    alert("Yazar Ekleme İşlemi Başarılı !");
                }

            });
        });

        $('#btndeletewriter').click(x => {
            let id = $("#txtdeletewriterid").val();
            $.ajax({
                url: "/Admin/Writer/DeleteWriter/" + id,
                type: "post",
                dataType: "json",
                success: function (func) {
                  
                    alert(id + " Numaralı Yazar Silindi");
                }
            });
        });

        $('#btnupdatewriter').click(function () {
            let writer = {
                Id: $("#txtupdatewriterid").val(),
                Name: $("#txtupdatewritername").val()
            };

            $.ajax({
                type: "post",
                url: "/Admin/Writer/UpdateWriter/",
                data: writer,
                success: function (func) {
                    alert(writer.Id + " Numaralı Yazar Güncellendi !");
                }
            });
        });
    </script>
}